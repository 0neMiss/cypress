{
  "extends": "../ts/tsconfig.json",
  "include": [
    "src",
  ],
  "exclude": [
    "script",
    "test",
  ],
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error",
    "types": [
      "node",
      "mocha"
    ]
  }
}