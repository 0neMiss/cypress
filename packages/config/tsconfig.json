{
  "extends": "../ts/tsconfig.json",
  "include": [
    "lib/*",
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "allowJs": false,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error",
    "lib": [
      "dom",
      "ES2020",
    ],
    "types": [
      "node"
    ],
    "typeRoots":[
      "../../node_modules/@types",
      "./node_modules/@types"
    ]
  }
}
