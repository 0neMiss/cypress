{
  "extends": "../ts/tsconfig.json",
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "test",
    "script"
  ],
  "compilerOptions": {
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error",
    "types": []
  },
}