{
  "extends": "../ts/tsconfig.json",
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "types": ["cypress"]
  }
}